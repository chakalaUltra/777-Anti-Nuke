<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logs - <%= guild.name %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="dashboard-layout with-sidebar">
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/dashboard" class="back-btn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="19" y1="12" x2="5" y2="12"/>
                        <polyline points="12 19 5 12 12 5"/>
                    </svg>
                </a>
                <div class="guild-header">
                    <% if (guild.icon) { %>
                        <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %>" class="sidebar-guild-icon">
                    <% } else { %>
                        <div class="sidebar-guild-initials"><%= guild.name.charAt(0) %></div>
                    <% } %>
                    <span class="sidebar-guild-name"><%= guild.name %></span>
                </div>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard/<%= guild.id %>" class="sidebar-link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                        <polyline points="9 22 9 12 15 12 15 22"/>
                    </svg>
                    Overview
                </a>
                <a href="/dashboard/<%= guild.id %>/logs" class="sidebar-link active">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                        <polyline points="14 2 14 8 20 8"/>
                        <line x1="16" y1="13" x2="8" y2="13"/>
                        <line x1="16" y1="17" x2="8" y2="17"/>
                    </svg>
                    Logs
                </a>
                <a href="/dashboard/<%= guild.id %>/tickets" class="sidebar-link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                        <polyline points="14 2 14 8 20 8"/>
                    </svg>
                    Tickets
                </a>
                <a href="/dashboard/<%= guild.id %>/moderation" class="sidebar-link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    </svg>
                    Moderation
                </a>
            </nav>
            <div class="sidebar-footer">
                <div class="user-info">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar" class="user-avatar-small">
                    <span><%= user.username %></span>
                </div>
                <a href="/logout" class="logout-btn-small">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        <polyline points="16 17 21 12 16 7"/>
                        <line x1="21" y1="12" x2="9" y2="12"/>
                    </svg>
                </a>
            </div>
        </aside>

        <main class="main-content">
            <div class="content-header">
                <h1>Logging Configuration</h1>
                <p>Set up channels for different log types</p>
            </div>

            <div class="logs-grid">
                <div class="log-config-card">
                    <div class="log-header">
                        <div class="log-icon message">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                            </svg>
                        </div>
                        <div class="log-info">
                            <h3>Message Logs</h3>
                            <p>Log deleted and edited messages</p>
                        </div>
                    </div>
                    <div class="channel-selector" data-log-type="message">
                        <button class="channel-select-btn" type="button">
                            <span class="selected-channel">
                                <% if (guildSettings.logChannels && guildSettings.logChannels.message) { %>
                                    <% const channel = textChannels.find(c => c.id === guildSettings.logChannels.message); %>
                                    # <%= channel ? channel.name : 'Unknown Channel' %>
                                <% } else { %>
                                    Click to choose channel
                                <% } %>
                            </span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        <div class="channel-dropdown">
                            <div class="channel-option" data-value="">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                Disable
                            </div>
                            <% textChannels.forEach(channel => { %>
                                <div class="channel-option" data-value="<%= channel.id %>">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 11a9 9 0 0 1 9 9"/>
                                        <path d="M4 4a16 16 0 0 1 16 16"/>
                                        <circle cx="5" cy="19" r="1"/>
                                    </svg>
                                    # <%= channel.name %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="log-config-card">
                    <div class="log-header">
                        <div class="log-icon member">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                <circle cx="8.5" cy="7" r="4"/>
                                <line x1="20" y1="8" x2="20" y2="14"/>
                                <line x1="23" y1="11" x2="17" y2="11"/>
                            </svg>
                        </div>
                        <div class="log-info">
                            <h3>Member Logs</h3>
                            <p>Log member joins and leaves</p>
                        </div>
                    </div>
                    <div class="channel-selector" data-log-type="member">
                        <button class="channel-select-btn" type="button">
                            <span class="selected-channel">
                                <% if (guildSettings.logChannels && guildSettings.logChannels.member) { %>
                                    <% const channel = textChannels.find(c => c.id === guildSettings.logChannels.member); %>
                                    # <%= channel ? channel.name : 'Unknown Channel' %>
                                <% } else { %>
                                    Click to choose channel
                                <% } %>
                            </span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        <div class="channel-dropdown">
                            <div class="channel-option" data-value="">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                Disable
                            </div>
                            <% textChannels.forEach(channel => { %>
                                <div class="channel-option" data-value="<%= channel.id %>">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 11a9 9 0 0 1 9 9"/>
                                        <path d="M4 4a16 16 0 0 1 16 16"/>
                                        <circle cx="5" cy="19" r="1"/>
                                    </svg>
                                    # <%= channel.name %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="log-config-card">
                    <div class="log-header">
                        <div class="log-icon moderation">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                            </svg>
                        </div>
                        <div class="log-info">
                            <h3>Moderation Logs</h3>
                            <p>Log bans, kicks, and warnings</p>
                        </div>
                    </div>
                    <div class="channel-selector" data-log-type="moderation">
                        <button class="channel-select-btn" type="button">
                            <span class="selected-channel">
                                <% if (guildSettings.logChannels && guildSettings.logChannels.moderation) { %>
                                    <% const channel = textChannels.find(c => c.id === guildSettings.logChannels.moderation); %>
                                    # <%= channel ? channel.name : 'Unknown Channel' %>
                                <% } else { %>
                                    Click to choose channel
                                <% } %>
                            </span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        <div class="channel-dropdown">
                            <div class="channel-option" data-value="">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                Disable
                            </div>
                            <% textChannels.forEach(channel => { %>
                                <div class="channel-option" data-value="<%= channel.id %>">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 11a9 9 0 0 1 9 9"/>
                                        <path d="M4 4a16 16 0 0 1 16 16"/>
                                        <circle cx="5" cy="19" r="1"/>
                                    </svg>
                                    # <%= channel.name %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="log-config-card">
                    <div class="log-header">
                        <div class="log-icon antinuke">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="12" y1="8" x2="12" y2="12"/>
                                <line x1="12" y1="16" x2="12.01" y2="16"/>
                            </svg>
                        </div>
                        <div class="log-info">
                            <h3>Anti-Nuke Logs</h3>
                            <p>Log anti-nuke detections and actions</p>
                        </div>
                    </div>
                    <div class="channel-selector" data-log-type="antinuke">
                        <button class="channel-select-btn" type="button">
                            <span class="selected-channel">
                                <% if (guildSettings.logChannels && guildSettings.logChannels.antinuke) { %>
                                    <% const channel = textChannels.find(c => c.id === guildSettings.logChannels.antinuke); %>
                                    # <%= channel ? channel.name : 'Unknown Channel' %>
                                <% } else { %>
                                    Click to choose channel
                                <% } %>
                            </span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        <div class="channel-dropdown">
                            <div class="channel-option" data-value="">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                Disable
                            </div>
                            <% textChannels.forEach(channel => { %>
                                <div class="channel-option" data-value="<%= channel.id %>">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 11a9 9 0 0 1 9 9"/>
                                        <path d="M4 4a16 16 0 0 1 16 16"/>
                                        <circle cx="5" cy="19" r="1"/>
                                    </svg>
                                    # <%= channel.name %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="log-config-card">
                    <div class="log-header">
                        <div class="log-icon server">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="2" width="20" height="8" rx="2" ry="2"/>
                                <rect x="2" y="14" width="20" height="8" rx="2" ry="2"/>
                                <line x1="6" y1="6" x2="6.01" y2="6"/>
                                <line x1="6" y1="18" x2="6.01" y2="18"/>
                            </svg>
                        </div>
                        <div class="log-info">
                            <h3>Server Logs</h3>
                            <p>Log channel and role changes</p>
                        </div>
                    </div>
                    <div class="channel-selector" data-log-type="server">
                        <button class="channel-select-btn" type="button">
                            <span class="selected-channel">
                                <% if (guildSettings.logChannels && guildSettings.logChannels.server) { %>
                                    <% const channel = textChannels.find(c => c.id === guildSettings.logChannels.server); %>
                                    # <%= channel ? channel.name : 'Unknown Channel' %>
                                <% } else { %>
                                    Click to choose channel
                                <% } %>
                            </span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        <div class="channel-dropdown">
                            <div class="channel-option" data-value="">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                Disable
                            </div>
                            <% textChannels.forEach(channel => { %>
                                <div class="channel-option" data-value="<%= channel.id %>">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 11a9 9 0 0 1 9 9"/>
                                        <path d="M4 4a16 16 0 0 1 16 16"/>
                                        <circle cx="5" cy="19" r="1"/>
                                    </svg>
                                    # <%= channel.name %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        const guildId = '<%= guild.id %>';
    </script>
    <script src="/js/main.js"></script>
</body>
</html>
